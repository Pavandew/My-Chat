<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".splash">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/wechat" />

    <TextView
        android:id="@+id/logoNameImg"
        android:layout_width="@dimen/_337sdp"
        android:layout_height="@dimen/_70sdp"
        android:fontFamily="@font/apptext"
        android:gravity="center"
        android:text="My Chat"
        android:textColor="@color/black"
        android:textSize="@dimen/_40sdp"

        />

    <TextView
        android:id="@+id/ownOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185sp"
        android:fontFamily="@font/spartan_thin"
        android:gravity="center"
        android:text="From"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ownTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spartan_thin"
        android:gravity="center"
        android:text="Pavan"
        android:textColor="@color/black"
        android:textSize="@dimen/_19sdp"
        android:textStyle="bold" />


</LinearLayout>